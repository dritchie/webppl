var generateTrainingData = function(name) {
	var present = { present: require.call(null, 'present') };	// For timing
	var dataDir = 'variational_experiments/lsystem/gen_traces';
	if (!fs.existsSync(dataDir)) {
		fs.mkdirSync(dataDir);
	}
	var filename = dataDir + '/' + name + '.txt';
	var t0 = present.present();
	var genData = function(counter) {
		// Generate for a random target, recording the target index as the first
		//    random choice in the trace so that playback can work correctly.
		var targetIdx = randomInteger(targetDB.numTargets()); 
		globalStore.target = targetDB.getTargetByIndex(targetIdx);
		var MAPtrace = ParticleFilter(generate, 300).MAPparticle.trace;
		var outTrace = [targetIdx].concat(MAPtrace);
		fs.appendFileSync(filename, JSON.stringify(outTrace) + '\n');
		var t = present.present();
		var rate = counter / ((t - t0)/60000);
		console.log('Generated trace ' + counter + ' (curr avg rate: ' + rate + ' per min)');
		genData(counter + 1);
	}
	genData(1);
};

var processTrainingData = function(name, startIndex) {
	var starti = startIndex === undefined ? 0 : startIndex;
	var dataFileName = 'variational_experiments/lsystem/gen_traces/' + name + '.txt';
	var traces = utils.loadTraces(dataFileName);
	var ProcessTrainingTrace = require.call(null, 'variational_experiments/lsystem/ProcessTrainingTrace.js').call(null, env);
	var imgData = {};
	var traceData = [];
	var processFn = function(i) {
		if (i < traces.length) {
			var trace = traces[i];
			ProcessTrainingTrace(generate, trace, imgData, traceData);
			console.log('Processed trace ' + (i+1) + '/' + traces.length);
			processFn(i + 1);
		}
	}
	processFn(starti);
	console.log('Saving to disk...');
	var processedDataDir = 'variational_experiments/lsystem/processed_data';
	if (!fs.existsSync(processedDataDir)) {
		fs.mkdirSync(processedDataDir);
	}
	var dataSubdir = processedDataDir + '/' + name;
	if (!fs.existsSync(dataSubdir)) {
		fs.mkdirSync(dataSubdir);
	}
	ProcessTrainingTrace.saveToDisk(dataSubdir, imgData, traceData);
	console.log('DONE.');
}

